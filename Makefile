SRC=	fdf.c	


HEADFILES=	fdf.h

OBJ=	${SRC:.c=.o}

NAME=		fdf

CC=			cc

CFLAGS=		-Wall -Wextra -Werror

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -Imlx -I libft -c $< -o $@

${NAME}:	lib ${OBJ} ${HEADFILES}
			${CC} ${OBJ} -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)

all:		${NAME}

lib:
			make -C libft

clean:
			rm -f ${OBJ}

fclean:		clean
			rm -f ${NAME}

re:			fclean all

.PHONY:		clean

shrek:
	@tput setaf 2
	@echo "⢀⡴⠑⡄⠀⠀⠀⠀⠀⠀⠀⣀⣀⣤⣤⣤⣀⡀"
