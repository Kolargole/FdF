SRC=	fdf.c		\
		fdf_utils.c


HEADFILES=	fdf.h

OBJ=		${SRC:.c=.o}

NAME=		fdf

CC=			cc

CFLAGS=		-Wall -Wextra

%.o:		%.c ${HEADFILES}
			${CC} ${CFLAGS} -Imlx -c $< -o $@

${NAME}:	${OBJ} ${HEADFILES}
			make -C libft
			make -C mlx
			ln -sf libft/libft.a
			ln -sf mlx/libmlx.dylib
			${CC} ${OBJ} libft.a libmlx.dylib -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)


all:		${NAME}

clean:
			rm -f ${OBJ}
			make clean --directory=Libft
			make clean --directory=mlx

fclean:		clean
			rm -f ${NAME}
			rm -f libft.a
			rm -f libmlx.dylib
			make fclean --directory=Libft

re:			fclean all

.PHONY:		clean

shrek:
	@tput setaf 2
	@echo "⢀⡴⠑⡄⠀⠀⠀⠀⠀⠀⠀⣀⣀⣤⣤⣤⣀⡀"
